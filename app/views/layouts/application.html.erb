<!DOCTYPE html>
<html>
	<head>
		<title>Visitor Management</title>
		
		<%= stylesheet_link_tag    "bootstrap.min", :media => "all" %>
		<%= stylesheet_link_tag    "style", :media => "all" %>
		<%= stylesheet_link_tag "fixcss" %>

		<%#= javascript_include_tag "jquery-1-1.9.1.min" %>
		<%= javascript_include_tag "bootstrap.min" %>
		<%= javascript_include_tag "application" %>

  		
	  	<%= javascript_include_tag 'webcam' %>
	  	<%= javascript_include_tag "custom" %>
	  	<%= csrf_meta_tags %>
	  	
		<!--[if lt IE 9]>
		<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->
	</head>
	<body>
		
		<div class="header">
	      <div class="container">
	        <div class="row-fluid">
	        	<span class="span2">
		            <div class="logoheader">
		            	<%= image_tag "logo.png", :alt => "34pass.com" %>
		            	
	            	</div>
            	</span>
            	<span class="span7">
		            <div class="mainmenu">
		              <ul class="unstyled">
		                <li><%= link_to "Check In", new_visitor_path %></li>
		                <li><%= link_to "Checkout", visitor_checkout_path %></li>
		                <li><%= link_to "Expired", twelve_plus_path %></li>
		                <li><%= link_to "Dashboard", dashboard_index_path %></li>
		                <li class="dropdown">
			                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Me</a>
			                <ul class="dropdown-menu">
				                <li><%= link_to "Me", me_index_path %></li>
				                <li><%= link_to "Logout", destroy_user_session_path, :method => :delete %></li>
			                </ul>
		                </li>
		              </ul>
		            </div>
	            </span>
	            <span class="span3">
		            <div class="quicksearch">
		              <%= form_tag visitor_search_path do %>
											
						<%= text_field_tag 'search_key', "", {:class => "quicksearchbar input-block-level", :placeholder => "Search.."} %>
						<%= submit_tag '', :class => 'searchbt' %>
						
					  <% end %>
		            </div>
	            </span>
            </div>
	      </div>
	    </div>
	    
	    <div class="bodier">
	    	<div class="container">
	    		<%= render partial: "layouts/flash_messages", flash: flash %>
	    		
	    		<%= yield %>
	    	</div>
    	</div>
		
	</body>
</html>

