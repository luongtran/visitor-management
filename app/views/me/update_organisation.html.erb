<div class="page-header">
  <h1><%=t '.title', :default => 'Me - Update Organisation' %></h1>
</div>
<div class="container">
	<div class="left-content">
		<%= render 'me_menu' %>
	</div>
	<div class="right-content">
		<%= form_for @user, :url => me_update_path, :class => 'form-horizontal' do |f| %>
			<div class="control-group">
			    <%= label_tag 'Organisation'%>
			    <div class="controls">
			      <%= f.text_field :organisation_name, :class => 'text_field' %>
			    </div>
			</div>
			
			    <%= f.submit 'Update', :class => 'btn btn-primary' %>
			    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
			                me_index_path, :class => 'btn' %>
			
		<% end %>
	</div>
</div>
