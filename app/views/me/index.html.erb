<script type="text/javascript">
	$(document).ready(function() {
		var organisation_name = $("input#user_organisation_name").val();
		$('#change_organisation_name').click(function() {
			if($(this).is(":checked")) {
				$("input#user_organisation_name").val("");
				$("input#user_organisation_name").focus();
			} else {
				$("input#user_organisation_name").val(organisation_name);
			}
		});
		
		$('#change_password').click(function() {
			if($(this).is(":checked")) {
				$("input#user_current_password").focus();
			} 
		});
	})
</script>
<div class="pagerbg accountpage">
	<div class="row-fluid">
		<div class="span16">
			<div class="accountpanel">
				<div class="row-fluid">
					<%= form_for current_user, :url => update_organisation_path, :class => 'form-horizontal'  do |f| %>
					<div class="accountfield row-fluid">
	                    <div class="span4 text-right">
	                    <%= label_tag 'Edit organization name'%>
	                    </div>
	                    <div class="span6">
	                    	<%= f.text_field :organisation_name, {:class => "input-block-level", :placeholder => "Enter new organization name"} %>
	                    </div>
	                     <div class="span2">
	                    	<input type="submit" value="Edit" class="btn btn-success span8">
	              		</div>
                    </div>
                    <% end %>
                    <%= form_for current_user, :url => change_password_path, :method => 'put', :class => 'form-horizontal'  do |f| %>
                    <div class="accountfield row-fluid">
	                    <div class="span4 text-right">
	                    	<%= label_tag 'Generate new password'%>
	                    </div>
	                    <div class="span6">
	                    	<%= f.password_field :current_password, :class => 'span12 textbox-big justus-roman', :placeholder => "Old password" %>
	                    	
	                    </div>
	                </div>
	                
	                <div class="accountfield row-fluid">
	                    <div class="span4 text-right">
	                    </div>
	                    <div class="span6">
	                    	<%= f.password_field :password, {:class => "input-block-level", :placeholder => "New password"}  %>
	                    </div>
	                    <div class="span2">
	                    	<input type="submit" value="Generate" class="btn btn-success">
	              		</div>
	                </div>
	                <% end %>
	                <%= form_tag excel_import_path, :url => me_update_path, :class => 'form-horizontal', :multipart => true  do  %>
	                <div class="accountfield row-fluid">
	                   <div class="span4 text-right">
	                    <%= label_tag 'Import "here to meet" list'%>
	                    <%= link_to 'Download sample table', 
	                                '34pass-heretomeet.xlsx' %>
	                    </div>
	                    <div class="span6">
	                    	<%= file_field_tag :excel_file, :class => "" %> 	
	                    </div>
	                     <div class="span2">
	                    	<input type="submit" value="Upload" class="btn btn-success span8">
	              		</div>
                    </div>
	                <% end %>
				</div>
				
			</div>
		</div>
	</div>
</div>

