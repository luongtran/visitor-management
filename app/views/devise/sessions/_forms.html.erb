	<div class="canvas-body" style="background:none;">
		<div class="container small pagerbg" style="margin-top: 60px">
			<h2 class="text-center displayblock">Login</h2>
			<div id="login" class="formbox">
				<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
			
			<label>
				<%= f.email_field :email, {:class => "input-block-level", :placeholder => "Email"} %>
			</label>
			<label>
				<%= f.password_field :password, {:class => "input-block-level", :placeholder => "Password"} %>
			</label>
			<!-- <label>
				<%= f.check_box :remember_me %> <%= f.label :remember_me %>
			</label> -->
			
			<label>
				<span class="row-fluid">
					<%= f.submit "Manage Visitor", :class => "btn btn-large btn-success span8 offset2", :name=>"loginbt" %>
				</span>
				<br/>
				<span class="row-fluid">
					<%= link_to "Reset password", new_user_password_path,
						:class => "resetpass span8 offset2 text-center" %>
				</span>
			</label>
				
		<% end %>
		</div>

		</div>
	</div>

	<div class="spacing"></div>
</div>

<script type="text/javascript">
	$(document).ready(function() {
		$('.bigheadline').remove();
		$('.canvas-body').css('background', 'none');
	});
</script>