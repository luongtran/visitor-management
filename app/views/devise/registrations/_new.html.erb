	
	<% 
		 if @user.nil?
		 	@user = User.new
		 end
		 %>
	<%= form_for(@user, :as => @user, :url => user_registration_path, :name => "register") do |f| %> 
	   <!-- registration_path(resource_name) -->
	  	<% if @user.errors.any? %>
		    <div id="error_explanation">
		      <h3 class="semi-headtext"><%= pluralize(@user.errors.count, "error") %> prohibited this apt from being saved:</h3>
		
		      <ul>
		      <% @user.errors.full_messages.each do |msg| %>
		        <li class="semi-headtext"><%= msg %></li>
		      <% end %>
		      </ul>
		    </div>
	  <% end %>

		
		<label><%= f.email_field :email, {:class => "input-block-level", :placeholder => "Email"} %></label>
		<label><%= f.text_field :organisation_name, {:class => "input-block-level", :placeholder => "Organisation name"} %></label>
		<span> <%= f.text_field :location, {:class => "input-block-level span8",
				:placeholder => "Location"} %> 
				<%= f.text_field :zip_code, {:class => "input-block-level span4",
				:placeholder => "Zip Code"} %> 
		</span>	
		
		<label><%= f.password_field :password, {:class => "input-block-level", :placeholder => "Password"} %></label>
		
		<label>
			<span>
				<%= f.submit "Digitalize people movement", :class => "btn btn-large btn-success span6 offset", :style => "margin-left:35px;" %>
				<%= link_to "Login", new_user_session_path, :class => "btn btn-large btn-success span4", :style => "float:right; margin-right:35px" %>
			</span>
		</label>
		
	<% end %>
			
