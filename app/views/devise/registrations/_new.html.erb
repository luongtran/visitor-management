
	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	  	<%= devise_error_messages! %>
		
		<label><%= f.email_field :email, {:class => "input-block-level", :placeholder => "Email"} %></label>
		<label><%= f.text_field :organisation_name, {:class => "input-block-level", :placeholder => "Organisation name"} %></label>
		
		<label><%= f.password_field :password, {:class => "input-block-level", :placeholder => "Password"} %></label>
		
		<label><%= f.password_field :password_confirmation, {:class => "input-block-level", :placeholder => "Password confirmation"} %></label>
		
		<label>
			<span class="row-fluid">
				<%= f.submit "Digitalize people movement", :class => "btn btn-large btn-success span8 offset2" %>
			</span>
		</label>
		
	<% end %>
			
