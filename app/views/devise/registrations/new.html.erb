<div id="container-sign">
	<div class="container" id="container-sign-wrap">
		<div class="row">
			<div id="form-signup" class="form span6">
				<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
				  <%= devise_error_messages! %>
					<fieldset>
						<legend>
							<span class="hattori">Please sign up</span>
							<span class="pull-right lock"></span>
							
							<a href="<%= new_session_path(resource_name) %>" class="btn btn-success pull-right"><i></i>Log In</a>
						</legend>
						<div class="wrap-form">
							<%= f.text_field :organisation_name, {:class => "span5 input-text", :placeholder => "Organisation name"} %>
							<!-- <input type="text" placeholder="Organisation name" class="span5 input-text"> -->
							<%= f.text_field :email, {:class => "span5 input-text", :placeholder => "Email"} %>
							<!-- <input type="text" placeholder="Email" class="span5 input-text"> -->
							<%= f.password_field :password, {:class => "span5 input-text", :placeholder => "Password"} %>
							<!-- <input type="text" placeholder="Password" class="span5 input-text"> -->
							<%= f.password_field :password_confirmation, {:class => "span5 input-text", :placeholder => "Password confirmation"} %>
							<!-- <input type="text" placeholder="Password confirmation" class="span5 input-text"> -->
							<%= f.submit "Sign up", :class => "btn btn-primary btn-large" %>
							<!-- <button type="submit" class="btn btn-primary btn-large">Submit</button> -->
						</div>
					</fieldset>
				  <!-- <div>
				  	<%= f.label :organisation_name %> <br>
				  	<%= f.text_field :organisation_name %>
				  </div>
				  <div><%= f.label :email %><br />
				  <%= f.email_field :email %></div>
				
				  <div><%= f.label :password %><br />
				  <%= f.password_field :password %></div>
				
				  <div><%= f.label :password_confirmation %><br />
				  <%= f.password_field :password_confirmation %></div>
				
				  <div><%= f.submit "Sign up" %></div> -->
				<% end %>
			</div>
		</div>
		
		<!-- <div class="guard">
			<span class="guard-talk hattori">
				Help me manager my visitor
			</span>
		</div> -->
		<div class="smalltip">
			<span class="hattori-em">Sign up in less than <strong>60sec</strong>.</span>
			<br/>
			<span class="hattori-em"><strong>No credit card</strong> required.</span>
		</div>
	</div>
</div>
