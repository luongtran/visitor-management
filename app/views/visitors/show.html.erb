<%- model_class = Visitor -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>
<dt><%= image_tag @visitor.photo.url(:small) %></dt>
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:visitor_name) %>:</strong></dt>
  <dd><%= @visitor.visitor_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:visitor_company_name) %>:</strong></dt>
  <dd><%= @visitor.visitor_company_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:visitor_mobile_number) %>:</strong></dt>
  <dd><%= @visitor.visitor_mobile_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:reason_to_visit) %>:</strong></dt>
  <dd><%= @visitor.reason_to_visit %></dd>
  <dt><strong><%= model_class.human_attribute_name(:here_to_meet) %>:</strong></dt>
  <dd><%= @visitor.here_to_meet %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
  <dd><%= @visitor.location %></dd>
  <dt><strong><%= model_class.human_attribute_name(:visitor_vehicle_number) %>:</strong></dt>
  <dd><%= @visitor.visitor_vehicle_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:storage_device_detail) %>:</strong></dt>
  <dd><%= @visitor.storage_device_detail %></dd>
  <dt><strong><%= model_class.human_attribute_name(:authorized_id) %>:</strong></dt>
  <dd><%= @visitor.authorized_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comment) %>:</strong></dt>
  <dd><%= @visitor.comment %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              visitors_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_visitor_path(@visitor), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              visitor_path(@visitor),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
