<%- model_class = Visitor -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:visitor_name) %></th>
      <th><%= model_class.human_attribute_name(:visitor_company_name) %></th>
      <th><%= model_class.human_attribute_name(:visitor_mobile_number) %></th>
      <th><%= model_class.human_attribute_name(:reason_to_visit) %></th>
      <th><%= model_class.human_attribute_name(:here_to_meet) %></th>
      <th><%= model_class.human_attribute_name(:photo) %></th>
      <th><%= model_class.human_attribute_name(:location) %></th>
      <th><%= model_class.human_attribute_name(:visitor_vehicle_number) %></th>
      <th><%= model_class.human_attribute_name(:storage_device_detail) %></th>
      <th><%= model_class.human_attribute_name(:authorized_id) %></th>
      <th><%= model_class.human_attribute_name(:comment) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th>Pass ID</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @visitors.each do |visitor| %>
      <tr>
        <td><%= link_to visitor.id, visitor_path(visitor) %></td>
        <td><%= visitor.visitor_name %></td>
        <td><%= visitor.visitor_company_name %></td>
        <td><%= visitor.visitor_mobile_number %></td>
        <td><%= visitor.reason_to_visit %></td>
        <td><%= visitor.here_to_meet %></td>
        <td><%= image_tag visitor.photo.url(:small) %></td>
        <td><%= visitor.location %></td>
        <td><%= visitor.visitor_vehicle_number %></td>
        <td><%= visitor.storage_device_detail %></td>
        <td><%= visitor.authorized_id %></td>
        <td><%= visitor.comment %></td>
        <td><%=l visitor.created_at %></td>
        <td><%= visitor.pass_id %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_visitor_path(visitor), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      visitor_path(visitor),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_visitor_path,
            :class => 'btn btn-primary' %>
