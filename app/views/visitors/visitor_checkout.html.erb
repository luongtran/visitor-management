<script type="text/javascript">
	$(document).ready(function() {
		$('#link-search').click(function() {
			$('.text').hide();
			$(this).hide();
			$('#frmVisitorSearch').show();
		});
	});
</script>

<div class="page-header">
  <h1>Visitor checkout</h1>
</div>
<div class="notification <%= @success ? 'valid' : 'invalid' %>" id="checkout-notification">
<% if (!@success.nil? && !flash[:notice].nil?) %>
	<%= flash[:notice] %>
<% end %>
</div>
<div id="visitor_search_results">
	<div id="results"></div>
	<div id="frmVisitorSearch">
		<%= render :partial => 'search_form', :locals => {:ajax => true} %>
	</div>
</div>
<div id="checkout">
	<%= form_tag visitor_checkout_path, :html => {:class => 'form-horizontal'} do %>
	<div class="control-group">
		<%= label_tag 'Visitor Pass ID' %>
		<div class="controls">
			<%= text_field_tag 'pass_id', '', :class => 'text_field' %>
			<span class="text">You don't know the pass id?</span> <%= link_to "Do search","#", :id => 'link-search', :class => 'btn btn-success' %> 
		</div>
		
		<div class="form-actions">
		    <%= submit_tag 'Checkout', :class => 'btn btn-primary', :id => 'btn-checkout' %>
		</div>
		
	</div>
	<% end %>

</div>